---
interface Props {
    url: string;
    repo: string;
    repoLink: string;
    desc: string;
}
const { url, repo, repoLink, desc } = Astro.props as Props;

import OpenLinkSVG from '../assets/open_link.svg?raw'
---

<div class="project">
	<a
		href={url}
		class="underline underline-offset-4 decoration-gray-700 hover:decoration-gray-100 duration-[.4s] transition ease-in-out"
		target="_blank"
	>
		<h3 class="hover-1 max-w-fit text-[var(--text)] flex">
			{repo}
			<Fragment set:html={OpenLinkSVG}/>
		</h3>
	</a>
	<div class="mt-2 text-[var(--text-alt)]">
		<p class="text-md">{desc}</p>
		<a
			href={repoLink}
			class="text-xs m-0 text-[var(--text-alt)] hover:underline"
			target="_blank"
		>
			check repo
		</a>
	</div>
</div>

<style is:inline>
	.project svg {
        display:inline-block;
        height:1.5rem;
        width:1.5rem;
	}
</style>
<style>
	* {
		overflow-x: hidden;
		overflow-x: ellipsis;
	}
	h3 {
		text-transform: capitalize;
	}
</style>
