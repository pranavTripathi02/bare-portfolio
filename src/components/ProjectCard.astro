---
interface Props {
    url: string;
    repo: string;
    repoLink: string;
    desc: string;
}

const { url, repo, repoLink, desc } = Astro.props;
console.log(Astro.props);
---

<div class="project">
<a href={url} class="underline underline-offset-4 decoration-gray-700 hover:decoration-gray-100 duration-[.4s] transition ease-in-out" target="_blank">
    <h3 class="hover-1 max-w-fit">
    {repo}
<svg class="inline-block text-gray-500" xmlns="http://www.w3.org/2000/svg" width="1.25rem" height="1.25rem" viewBox="0 0 256 256"><path fill="currentColor" d="M196 64v104a4 4 0 0 1-8 0V73.66L66.83 194.83a4 4 0 0 1-5.66-5.66L182.34 68H88a4 4 0 0 1 0-8h104a4 4 0 0 1 4 4Z"/></svg>
    </h3>
</a>
<div class="mt-2 text-gray-500">
<p class="text-md">{desc}</p>
<a href={repoLink} class="text-xs m-0 text-gray-400 hover:underline" target="_blank">
check repo
</a>
</div>
</div>

<style>
* {
    overflow-x:hidden;
    overflow-x:ellipsis;
}
h3{
    text-transform:capitalize;
}
.hover-1 {
  background: linear-gradient(#252525 0 0) var(--p, 0%) / var(--p,0%) no-repeat;
  transition: .4s, background-position 0s;
  border-radius:.275rem;
}
.hover-1:hover {
  --p: 100%;
}
</style>
